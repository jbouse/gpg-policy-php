{# templates/policy/base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ gpg_policy_owner }} GNU Privacy Guard Key Policy{% endblock %}

{% block stylesheets %}
<link href="{{ asset('assets/gpg-policy.css')}}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('assets/gnupg-icon.png')}}" type="image/png" rel="icon" />
{% endblock %}

{% block javascripts %}
{% cspscript %}
<script async src="https://www.googletagmanager.com/gtag/js?id={{ ga_tracking }}"></script>
{% endcspscript %}
{% cspscript %}
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments)};
            gtag('js', new Date());
            gtag('config', '{{ ga_tracking }}');
        </script>
{% endcspscript %}
{% endblock %}

{% block body %}
{% block content %}{% endblock %}
{{ include('policy/_footer.html.twig') }}
{% endblock %}